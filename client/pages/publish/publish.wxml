<view class="publish-wrap">
  <view class="item">
    <view class="label">
      我的地址
    </view>
    <view 
      class="content"
      bindtap="handleAddressTap"
    >
      {{address}}
    </view>
  </view>
  <view class="item">
    <view class="label">
      类型
    </view>
    <view class="content">
      <radio-group class="radio-group" bindchange="radioChange">
        <radio class="radio" value="buy" checked="{{true}}">
          <text>求购</text>
        </radio>
        <radio class="radio" value="sell">
          <text>转让</text>
        </radio>
      </radio-group>
    </view>
  </view>
  <view class="item">
    <view class="label">
      说明
    </view>
    <view class="content">
      <input class="weui-input" maxlength="10" bindinput="bindMessageInput" placeholder="填写您的具体需求"/>
    </view>
  </view>
  <view class="item">
    <view class="label">
      联系方式
    </view>
    <view class="content">
      <input class="weui-input" maxlength="10" bindinput="bindContactInput" placeholder="填写您的联系方式"/>
    </view>
  </view>

  <view>
    <button
      class="button"
      type="primary"
      size=""
      bindtap="handleSubmitTap"
    >发布信息</button>
  </view>
</view>